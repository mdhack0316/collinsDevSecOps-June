root@trainer:~/code# cat Dockerfile
FROM   oraclelinux:8.3

MAINTAINER   mayank

RUN   yum install httpd -y

WORKDIR    /var/www/html/

RUN  echo "Hello from mayank" > mayank.html

COPY  index.html  .


ENTRYPOINT    httpd -DFOREGROUND




